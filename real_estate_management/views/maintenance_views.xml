<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_maintenance_tree" model="ir.ui.view">
        <field name="name">real.estate.maintenance.tree</field>
        <field name="model">real.estate.maintenance</field>
        <field name="arch" type="xml">
            <list string="Maintenance Requests">
                <field name="request_number"/>
                <field name="property_id"/>
                <field name="maintenance_type"/>
                <field name="request_date"/>
                <field name="assigned_to"/>
                <field name="state" widget="badge" decoration-info="state == 'draft'" decoration-warning="state == 'in_progress'" decoration-success="state == 'done'"/>
            </list>
        </field>
    </record>

    <record id="view_maintenance_form" model="ir.ui.view">
        <field name="name">real.estate.maintenance.form</field>
        <field name="model">real.estate.maintenance</field>
        <field name="arch" type="xml">
            <form string="Maintenance Request">
                <header>
                    <button name="action_in_progress" string="Start" type="object" class="oe_highlight" invisible="state != 'draft'"/>
                    <button name="action_done" string="Done" type="object" class="oe_highlight" invisible="state != 'in_progress'"/>
                    <button name="action_draft" string="Reset to Draft" type="object" invisible="state == 'draft'"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,in_progress,done"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="request_number" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="property_id"/>
                            <field name="maintenance_type"/>
                            <field name="request_date"/>
                        </group>
                        <group>
                            <field name="assigned_to"/>
                            <field name="cost"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description"/>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="view_maintenance_search" model="ir.ui.view">
        <field name="name">real.estate.maintenance.search</field>
        <field name="model">real.estate.maintenance</field>
        <field name="arch" type="xml">
            <search string="Search Maintenance">
                <field name="request_number"/>
                <field name="property_id"/>
                <field name="assigned_to"/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="In Progress" name="inprogress" domain="[('state', '=', 'in_progress')]"/>
                <group expand="1" string="Group By">
                    <filter string="Type" name="group_by_type" context="{'group_by': 'maintenance_type'}"/>
                    <filter string="State" name="group_by_state" context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_maintenance" model="ir.actions.act_window">
        <field name="name">Maintenance Requests</field>
        <field name="res_model">real.estate.maintenance</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
